{
  "name": "vinylsiding",
  "version": "1.0.7",
  "description": "CSS/JS Stepstool",
  "main": "dist/scripts/vinylsiding.js",
  "private": false,
  "scripts": {
    "test": "npm run test-app",
    "serve": "node bin/server.js",
    "build": "node bin/build.js css js",
    "build:css": "node bin/build.js css",
    "build:js": "node bin/build.js js",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jayfid/vinyl.git"
  },
  "author": "jayfid",
  "license": "ISC",
  "homepage": "https://github.com/jayfid/vinyl#readme",
  "dependencies": {
    "node-sass": "^4.7.2",
    "postcss": "^6.0.14",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.12.1",
    "uglify-js": "^3.2.2",
     "autoprefixer": "^7.2.3",
     "clean-css": "^4.1.9"
  },
  "devDependencies": {

    "browser-sync": "^2.21.0",

    "eslint": "^4.13.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "npm-watch": "^0.3.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "app/scripts",
        "app/styles"
      ],
      "extensions": "js",
      "ignore": "",
      "quiet": true,
      "legacyWatch": true,
      "delay": 0
